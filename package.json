  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "supertest": "^6.0.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
